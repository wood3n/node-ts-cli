    "build": "node ./config/esbuild.pro.config"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "please-upgrade-node": "^3.2.0",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "esbuild": "^0.14.1",
    "esbuild-node-externals": "^1.4.0",
    "ts-node": "^10.4.0"
  }
