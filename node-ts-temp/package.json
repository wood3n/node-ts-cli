{
  "name": "node-ts-cli",
  "version": "1.0.0",
  "author": "wangkai",
  "homepage": "https://github.com/wood3n/node-ts-cli",
  "description": "a nodejs boilerplate based on typescript and esbuild",
  "keywords": [
    "nodejs",
    "typescript",
    "esbuild"
  ],
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16.13"
  },
  "files": [
    "bin",
    "build"
  ],
  "bin": {
